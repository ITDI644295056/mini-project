    private void calculateActionPerformed(java.awt.event.ActionEvent evt) {                                          
                float upperValue = Float.parseFloat(upper.getText());
                float lowerValue = Float.parseFloat(lower.getText());
                
                if(upperValue >=160 && lowerValue >=100){
                    warning.setForeground(Color.red);
                    warning.setText("สูงมาก");
                    
                    output.setText("พบแพทย์ด่วน");
                }
                else if(upperValue >=140 && lowerValue >=90){
                    warning.setForeground(Color.pink);
                    warning.setText("สูง");
                    output.setText("พบแพทย์");
                }
                else if(upperValue >=121 && lowerValue >=80){
                    warning.setForeground(Color.yellow);
                    warning.setText("ค่อนข้างสูง");
                    output.setText("ปรีกษาแพทย์");
                }
                else if(upperValue <=120 && lowerValue <=79){
                    warning.setForeground(Color.green);
                    warning.setText("ปกติ");
                    output.setText("ตรวจเช็คความดันโลหิตสม่ำเสมอ");
                }
    }                                         

    private void clearActionPerformed(java.awt.event.ActionEvent evt) {                                      
            upper.setText("");
            lower.setText("");
            output.setText("");
            warning.setText("");
    }                                     

    private void exitActionPerformed(java.awt.event.ActionEvent evt) {                                     
       System.exit(0);
    }                                    

