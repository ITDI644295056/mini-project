    private void calculateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int age_value = Integer.parseInt(age.getText());
        float height_value = Float.parseFloat(height.getText());
        
        if(male.isSelected()){
            if(age_value == 5){
                if(height_value >= 100 && height_value <=105){
                    output.setText("เตี้ย");
                }
                 if(height_value >= 115 && height_value <=120){
                    output.setText("สูง");
                }
            
            }
            if(age_value == 6){
                 if(height_value >= 105 && height_value <=112){
                    output.setText("เตี้ย");
                }
                  if(height_value >= 118 && height_value <=125){
                     output.setText("สูง");
                }
            
            }
            if(age_value == 7){
                 if(height_value >= 112 && height_value <=117){
                    output.setText("เตี้ย");
                }
             if(height_value >= 125 && height_value <=132){
                     output.setText("สูง");
                }
            }
            if(age_value == 8){
                 if(height_value >= 117 && height_value <=122){
                    output.setText("เตี้ย");
                }
             if(height_value >= 136 && height_value <=145){
                     output.setText("สูง");
                }
            }
            if(age_value == 9){
                 if(height_value >= 122 && height_value <=126){
                    output.setText("เตี้ย");
                }
             if(height_value >= 142 && height_value <=152){
                     output.setText("สูง");
                }
            }
            if(age_value == 10){
                 if(height_value >= 126 && height_value <=132){
                    output.setText("เตี้ย");
                }
             if(height_value >= 146 && height_value <=158){
                     output.setText("สูง");
                }
            }
            if(age_value == 11){
                 if(height_value >= 129 && height_value <=136){
                    output.setText("เตี้ย");
                }
             if(height_value >= 158 && height_value <=163){
                     output.setText("สูง");
                }
            }
            if(age_value == 12){
                 if(height_value >= 136 && height_value <=142){
                    output.setText("เตี้ย");
                }
             if(height_value >= 162 && height_value <=168){
                     output.setText("สูง");
                }
            }
            if(age_value == 13){
                 if(height_value >= 138 && height_value <=146){
                    output.setText("เตี้ย");
                }
             if(height_value >= 165 && height_value <=170){
                     output.setText("สูง");
                }
            }
            if(age_value == 14){
                 if(height_value >= 145 && height_value <=150){
                    output.setText("เตี้ย");
                }
             if(height_value >= 172 && height_value <=175){
                     output.setText("สูง");
                }
            }
            if(age_value == 15){
                 if(height_value >= 149 && height_value <=157){
                    output.setText("เตี้ย");
                }
             if(height_value >= 177 && height_value <=185){
                     output.setText("สูง");
                }
            }
            if(age_value == 16){
                 if(height_value >= 157 && height_value <=160){
                    output.setText("เตี้ย");
                }
             if(height_value >= 181 && height_value <=187){
                     output.setText("สูง");
                }
            }
            if(age_value == 17){
                 if(height_value >= 158 && height_value <=163){
                    output.setText("เตี้ย");
                }
             if(height_value >= 183 && height_value <=189){
                     output.setText("สูง");
                }
            }
            if(age_value == 18){ 
                 if(height_value >= 159 && height_value <=165){
                    output.setText("เตี้ย");
                }
             if(height_value >= 185 && height_value <=188){
                     output.setText("สูง");
                }
            }
            if(age_value == 19){
                 if(height_value >= 160 && height_value <=165){
                    output.setText("เตี้ย");
                }
             if(height_value >= 187&& height_value <=190){
                     output.setText("สูง");
                }
            }
            if(age_value == 20){
                 if(height_value >= 161 && height_value <=165){
                    output.setText("เตี้ย");
                }
             if(height_value >= 188 && height_value <=192){
                     output.setText("สูง");
                }
            }
        
        }
        else if(female.isSelected()){
             if(age_value == 5){
             if(height_value >= 95 && height_value <=105){
                     output.setText("เตี้ย");
                }
              if(height_value >= 115 && height_value <=120){
                    output.setText("สูง");
                }
            }
            if(age_value == 6){
             if(height_value >= 105 && height_value <=110){
                     output.setText("เตี้ย");
                }
              if(height_value >= 118 && height_value <=123){
                    output.setText("สูง");
                }
            }
            if(age_value == 7){
             if(height_value >= 109&& height_value <=117){
                     output.setText("เตี้ย");
                }
              if(height_value >= 123 && height_value <=132){
                     output.setText("สูง");
                }
            }
            if(age_value == 8){
             if(height_value >= 115 && height_value <=123){
                     output.setText("เตี้ย");
                }
              if(height_value >= 137 && height_value <=145){
                    output.setText("สูง");
                }
            }
            if(age_value == 9){
             if(height_value >= 119 && height_value <=128){
                     output.setText("เตี้ย");
                }
              if(height_value >= 145 && height_value <=150){
                    output.setText("สูง");
                }
            }
            if(age_value == 10){
             if(height_value >= 125 && height_value <=132){
                     output.setText("เตี้ย");
                }
              if(height_value >= 147 && height_value <=152){
                    output.setText("สูง");
                }
            }
            if(age_value == 11){
             if(height_value >= 128 && height_value <=137){
                     output.setText("เตี้ย");
                }
              if(height_value >= 153 && height_value <=162){
                    output.setText("สูง");
                }
            }
            if(age_value == 12){
             if(height_value >= 135 && height_value <=145){
                     output.setText("เตี้ย");
                }
              if(height_value >= 157 && height_value <=165){
                    output.setText("สูง");
                }
            }
            if(age_value == 13){
             if(height_value >= 142 && height_value <=149){
                     output.setText("เตี้ย");
                }
              if(height_value >= 163 && height_value <=168){
                    output.setText("สูง");
                }
            }
            if(age_value == 14){
             if(height_value >= 145 && height_value <=152){
                     output.setText("เตี้ย");
                }
              if(height_value >= 165 && height_value <=170){
                    output.setText("สูง");
                }
            }
            if(age_value == 15){
             if(height_value >= 148 && height_value <=155){
                     output.setText("เตี้ย");
                }
              if(height_value >= 167 && height_value <=175){
                    output.setText("สูง");
                }
            }
            if(age_value == 16){
             if(height_value >= 149 && height_value <=157){
                     output.setText("เตี้ย");
                }
              if(height_value >= 170 && height_value <=173){
                    output.setText("สูง");
                }
            }
            if(age_value == 17){
             if(height_value >= 150 && height_value <=157){
                     output.setText("เตี้ย");
                }
              if(height_value >= 171 && height_value <=173){
                    output.setText("สูง");
                }
            }
            if(age_value == 18){
             if(height_value >= 150 && height_value <=158){
                     output.setText("เตี้ย");
                }
              if(height_value >= 172 && height_value <=175){
                    output.setText("สูง");
                }
            }
            if(age_value == 19){
             if(height_value >= 150 && height_value <=159){
                     output.setText("เตี้ย");
                }
              if(height_value >= 172 && height_value <=177){
                    output.setText("สูง");
                }
            }
            if(age_value == 20){
             if(height_value >= 150 && height_value <=160){
                     output.setText("เตี้ย");
                }
              if(height_value >= 172 && height_value <=179){
                    output.setText("สูง");
                }
            }
        }
    }                                         

